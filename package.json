{
  "name": "grapevine-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:tsc": "tsc",
    "build": "npm run clean && npm run build:tsc && tsc-alias",
    "dev": "ts-node src/index.ts",
    "docker:start:dev": "docker-compose up -d && docker exec -it grapevine-app bash",
    "migrate:up": "npm run typeorm migration:run -- -d src/db/index.ts",
    "start:dev": "nodemon",
    "start": "node dist/index.js",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "public",
      ".env"
    ],
    "exec": "node -r ts-node/register --inspect=0.0.0.0:9229 ./src/index.ts",
    "ext": "ts,gql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/presnizky/grapevine-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/presnizky/grapevine-api/issues"
  },
  "homepage": "https://github.com/presnizky/grapevine-api#readme",
  "dependencies": {
    "@apollo/server": "^4.1.1",
    "@types/cors": "^2.8.12",
    "@types/lodash": "^4.14.188",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-import-node": "0.0.5",
    "graphql-scalars": "^1.20.1",
    "graphql-tools": "^8.3.11",
    "lodash.merge": "^4.6.2",
    "morgan": "^1.10.0",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/lodash.merge": "^4.6.7",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.8",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  }
}
